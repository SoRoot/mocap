<div class="signup" >
	<div class="container content-section">
		<div class="form">

			<h2>Sign up</h2>
			<div class="signupcont">
				<%= form_for(@user) do |f| %>

					<%= render 'shared/error_messages' %>


					<% if @user.errors.include?(:username) %>
						<div><%= f.text_field :username, :placeholder => "Username", class: 'mocap-textbox textbox-wrong' %></div>
						
					<% else %>
						<div><%= f.text_field :username, :placeholder => "Username", class: 'mocap-textbox' %></div>
					<% end %>


					<% if @user.errors.include?(:password_digest) %>
						<div><%= f.password_field :password, :placeholder => "Password", class: 'mocap-textbox textbox-wrong' %></div>
					<% else %>
						<div><%= f.password_field :password, :placeholder => "Password", class: 'mocap-textbox' %></div>
					<% end %>

					<% if @user.errors.include?(:password) %>
						<div><%= f.password_field :password_confirmation, :placeholder => "Confirm password", class: 'mocap-textbox textbox-wrong' %></div>
					<% else %>
						<div><%= f.password_field :password_confirmation, :placeholder => "Confirm password", class: 'mocap-textbox' %></div>
					<% end %>

					
					<div><%= f.submit "Create an account", class: "btn-default btn mocap-textbox mocap-textbox-hov" %></div>

				<% end %>
			</div>
		</div>
	</div>
</div>
