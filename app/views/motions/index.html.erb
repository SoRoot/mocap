<p id="notice"><%= notice %></p>

<h1>Listing Motions</h1>

<table>
  <thead>
    <tr>
      <th>Actor</th>
      <th>Bvh file</th>
      <th>C3d file</th>
      <th>Role</th>
      <th>Mood</th>
      <th>Attribute 1</th>
      <th>Attribute 2</th>
      <th>Attribute 3</th>
      <th>Attribute 4</th>
      <th>Attribute 5</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @motions.each do |motion| %>
      <tr>
        <td><%= motion.actor %></td>
        <td><%= motion.bvh_file %></td>
        <td><%= motion.c3d_file %></td>
        <td><%= motion.role %></td>
        <td><%= motion.mood %></td>
        <td><%= motion.attribute_1 %></td>
        <td><%= motion.attribute_2 %></td>
        <td><%= motion.attribute_3 %></td>
        <td><%= motion.attribute_4 %></td>
        <td><%= motion.attribute_5 %></td>
        <td><%= link_to 'Show', motion %></td>
        <td><%= link_to 'Edit', edit_motion_path(motion) %></td>
        <td><%= link_to 'Destroy', motion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

