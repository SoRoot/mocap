<p id="notice"><%= notice %></p>

<h1>Listing Motions</h1>

<table>
  <thead>
    <tr>
      <th>Actor</th>
      <th>Downloaded</th>
      <th>Bvh file</th>
      <th>C3d file</th>
      <th>FBX file</th>
      <th>Start</th>
      <th>End</th>
      <th>Role</th>
      <th>Mood</th>
      <th>Attribute</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @motions.each do |motion| %>
      <tr>
        <td><%= motion.actor %></td>
        <td><%= motion.downloaded %></td>
        <td><%= motion.bvh_file %></td>
        <td><%= motion.c3d_file %></td>
        <td><%= motion.fbx_file %></td>
        <td><%= motion.start %></td>
        <td><%= motion.end %></td>
        <td><%= motion.role %></td>
        <td><%= motion.mood %></td>
        <td><%= motion.param.to_sentence %></td>
        
        <td><%= link_to 'Show', motion %></td>
        <td><%= link_to 'Edit', edit_motion_path(motion) %></td>
        <td><%= link_to 'Destroy', motion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

